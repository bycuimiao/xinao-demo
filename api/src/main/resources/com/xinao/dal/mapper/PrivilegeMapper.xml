<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xinao.dal.mapper.PrivilegeMapper">
    <resultMap id="privilegeResultMap" type="com.xinao.entity.Privilege">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="url" property="url"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <select id="findPrivileges" resultMap="privilegeResultMap" parameterType="java.lang.Long">
        SELECT
        p.id,
        p.mame,
        p.url
        FROM
        `user` u
        LEFT JOIN role r ON r.id = u.role_id
        LEFT JOIN role_privilege rp ON rp.role_id = r.id
        LEFT JOIN privilege p ON p.id = rp.privilege_id
        <where>
            u.id = #{id}
        </where>
    </select>

    <select id="findUsers" resultMap="userResultMap" parameterType="java.util.Map">
        select
        id,
        name,
        phone,
        password,
        role_id,
        create_time,
        update_time
        FROM user
        <where>
            <if test="@com.xinao.common.util.Ognl@isNotEmpty(id_eq)">
                AND id=#{id_eq}
            </if>
            <if test="@com.xinao.common.util.Ognl@isNotEmpty(name_eq)">
                AND name=#{name_eq}
            </if>
            <if test="@com.xinao.common.util.Ognl@isNotEmpty(phone_eq)">
                AND phone=#{phone_eq}
            </if>
            <if test="@com.xinao.common.util.Ognl@isNotEmpty(password_eq)">
                AND password=#{password_eq}
            </if>
        </where>
    </select>
</mapper>